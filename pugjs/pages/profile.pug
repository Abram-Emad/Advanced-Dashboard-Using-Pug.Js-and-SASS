//- Start Page
extends index

//- Change Page Title
block pageTitle    
    title #{arrayOfTitles[2]}

//- Change Page Content
block contentTitle
    h1.p-relative.mt-20.mr-20.mb-40.ml-40 #{arrayOfTitles[2]}

block pageContent
    .profile-page.m-20
      // Start Overview
      .overview.bg-white.rad-10.d-flex.align-center
        .avatar-box.txt-c.p-20
          img.rad-half.mb-10(src='imgs/avatar.png' alt='')
          h3.m-0 #{sidebarTitle}
          p.c-grey.mt-10 Level 20
          .level.rad-6.bg-eee.p-relative.m-auto
            span.rad-6.p-absolute.h-full(style='width: 70%')
          .rating.mt-10.mb-10
            i.fa-solid.fa-star.c-orange.fs-13
            i.fa-solid.fa-star.c-orange.fs-13
            i.fa-solid.fa-star.c-orange.fs-13
            i.fa-solid.fa-star.c-orange.fs-13
            i.fa-solid.fa-star.c-orange.fs-13
          p.c-grey.m-0.fs-13 550 Rating
        .info-box.w-full.txt-c-mobile
          // Start Information Row
          .box.p-20.d-flex.align-center.tr-3ms
            h4.c-grey.fs-15.m-0.w-full General Information
            .fs-14
              span.c-grey Full Name
              span #{sidebarTitle}
            .fs-14
              span.c-grey Gender:
              span Male
            .fs-14
              span.c-grey Country:
              span Egypt
            .fs-14
              label
                input.toggle-checkbox(type='checkbox' checked='')
                .toggle-switch.p-relative.tr-3ms
          // End Information Row
          // Start Information Row
          .box.p-20.d-flex.align-center
            h4.c-grey.w-full.fs-15.m-0 Personal Information
            .fs-14
              span.c-grey Email:
              span o@nn.sa
            .fs-14
              span.c-grey Phone:
              span 019123456789
            .fs-14
              span.c-grey Date Of Birth:
              span 25/10/1982
            .fs-14
              label
                input.toggle-checkbox(type='checkbox')
                .toggle-switch.p-relative.tr-3ms
          // End Information Row
          // Start Information Row
          .box.p-20.d-flex.align-center
            h4.c-grey.w-full.fs-15.m-0 Job Information
            .fs-14
              span.c-grey Title:
              span Full Stack Developer
            .fs-14
              span.c-grey Programming Language:
              span Python
            .fs-14
              span.c-grey Years Of Experience:
              span 15+
            .fs-14
              label
                input.toggle-checkbox(type='checkbox' checked='')
                .toggle-switch.p-relative.tr-3ms
          // End Information Row
          // Start Information Row
          .box.p-20.d-flex.align-center
            h4.c-grey.w-full.fs-15.m-0 Billing Information
            .fs-14
              span.c-grey Payment Method:
              span Paypal
            .fs-14
              span.c-grey Email:
              span email@website.com
            .fs-14
              span.c-grey Subscription:
              span Monthly
            .fs-14
              label
                input.toggle-checkbox(type='checkbox')
                .toggle-switch.p-relative.tr-3ms
          // End Information Row
      // End Overview
      // Start Other Data
      .other-data.d-flex.gap-20
        .skills-card.p-20.bg-white.rad-10.mt-20
          h2.mt-0.mb-10 My Skills
          p.mt-0.mb-20.c-grey.fs-15 Complete Skills List
          ul.m-0.txt-c-mobile
